!!! 5
%html{ lang: "en", class: "#{page_class}" }
  = render "layouts/head"
  %body{class: "#{user_application_theme}", data: {page: body_data_page, project: "#{@project.path if @project}", group: "#{@group.path if @group}"}}
    %nav{id: "sapoIntrabarContainer", "data-bind": "module: {name: 'IntraBar', data: {intraBaseDomain: '#{intra_base_url}', mainContentId: 'gitlabApp'}}"}
    #gitlabApp{ style: "margin-top: 3.29em;" }
      = Gon::Base.render_data

      -# Ideally this would be inside the head, but turbolinks only evaluates page-specific JS in the body.
      = yield :scripts_body_top

      = render "layouts/header/default", title: header_title
      = render 'layouts/page', sidebar: sidebar, nav: nav

      = yield :scripts_body
      = render "layouts/intrabar_js"
